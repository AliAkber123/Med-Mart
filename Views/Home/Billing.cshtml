
@{
    ViewBag.Title = "Billing Page";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>

            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink("OnlinePharmacy", "Home", new { area = "" }, new { @class = "navbar-brand" })

                    </li>

                    <li class="nav-item">

                        <a class="navbar-brand" href="#"> <b> @Html.ActionLink("Billing", "Billing", "Home") </b></a>
                        <img src="~/Content/download2.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
                    </li>
                    <li class="nav-item">

                        <a class="navbar-brand" href="#"> <b> @Html.ActionLink("Logout", "SellerLogin", "Admin")</b></a>
                        <img src="~/Content/logout-11551056293ans77of4wy-removebg-preview.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
                    </li>
                     
                </ul>

            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">

        </div>
        <div class="mt-5">
            <div class="col-md-1">

            </div>
            <div class="col-md-10 bg-white">
                <div class="row">
                    <div class="col-6">
                        <div class="row">
                           
                            <div class="col p-2 bg-light border">
                                <p><b>Medicine Code</b></p>
                                <input type="text" class="form-control" placeholder="Medicine Code" aria-label="First name">
                            </div>
                            <div class="col p-2 bg-light border">
                                <p><b>Medicine Price</b></p>
                                <input type="text" class="form-control" placeholder="Medicine Price" aria-label="Last name">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col p-2 bg-light border">
                                <p><b>Medicine Quantity</b></p>
                                <input type="text" class="form-control" placeholder="Medicine Quantity" aria-label="First name">
                            </div>
                            <div class="col p-2 bg-light border">
                                <p><b>Billing Date</b></p>
                                <input type="date" class="form-control" placeholder="Billing date" aria-label="Last name">
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col d-grid ">
                                <button  type="button" class="btn btn-success" style="padding:5px 10px;">Add To Bill</button>

                            </div>
                            <div class="col d-grid ">
                                <button   type="button" class="btn btn-primary">Reset</button>
                            </div>
                            
                        </div>
                    </div>


                </div>


            </div>
            <div class="row">
                <h2>Client Bill</h2>
                <asp:GridView id="  ClientBill"  class="table" runat="server"></asp:GridView>
            </div>

            <div class="col-md-1">


            </div>
        </div>

    </div>



</body>
</html>